<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/Home/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body  >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <strong>@Html.ActionLink("Pastebook", "Home", "Pastebook", new { area = "" }, new { @class = "navbar-brand" })</strong>
            </div> 
             
                
             
            <div class="navbar-collapse collapse">
                
                <div class="nav navbar-form navbar-left">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" />
                    </div>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbarIcon dropdown">
                        <a role="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onclick="ReloadPartialFriend()" >
                        <span class="glyphicon glyphicon-user"></span><span id="bdgeFriend" class="badge redText"></span></a>
                        
                        <ul id="dropdownFriend" class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul> 
                        
                    </li>
                     <li class="navbarIcon dropdown">
                        <a role="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" onclick="ReloadPartialNotification()">
                            <span class="glyphicon glyphicon-globe"></span><span id="bdgeNotification" class="badge redText"></span>
                        </a> 
                        <ul id="dropdownNotification" class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>

                    </li>
                    <li  class="btn-group">
                        @*<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Profile<span class="caret"></span>
                        </button>*@ 
                       <img role="button" id="imgNavBar" src="~/Content/Images/defaultProfilePic.jpg" class="img-circle img-responsive" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" />
                        
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("View Profile","ViewProfile","Pastebook",new { userName = Session["CurrentUserName"].ToString()},null)</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.ActionLink("Logout","Logout","Pastebook")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody() 
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Custom/Profile.js"></script>
</body>
</html>
