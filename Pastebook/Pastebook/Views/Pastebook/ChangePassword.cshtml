 
@{ 
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}


@using (Html.BeginForm("ChangePassword", "Pastebook", FormMethod.Post))
{
    <div id="settingsRenderBody">
        <div class="row">
            <div class="col-md-12">
                <span class="settingsHeaderBottom">Change Password</span>
            </div>
        </div>
        <strong class="redFontColor">Required(<span class="glyphicon glyphicon-asterisk"></span>)</strong>
        <div class="row ">
            <div class="col-md-8 col-md-offset-2">
                <div class="form-horizontal"> 
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <label for="password" class="control-label">New password</label><strong class="redFontColor asteriskSize">*</strong>
                        </div>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required />  
                            @Html.ValidationMessage("PasswordError", new { @class = "text-danger", @id = "passwordError" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <label for="confirmPassword" class="control-label">Confirm password</label><strong class="redFontColor asteriskSize">*</strong>
                        </div>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" placeholder="Confirm Password" required />
                     
                            @Html.ValidationMessage("ConfirmPasswordError",new { @class="text-danger" ,@id="confirmError"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3 text-right">
                            <label for="oldPassword" class="control-label">Old password</label><strong class="redFontColor asteriskSize">*</strong>
                        </div>
                        <div class="col-md-9">
                            <input type="password" class="form-control" name="oldPassword" id="oldPassword" placeholder="Old Password" required />
                            @Html.ValidationMessage("OldPasswordError",new { @class="text-danger",@id="oldError"})
                        </div>
                    </div> 
                </div>
                <div class="row">
                    <div class="col-md-offset-3 col-md-6">
                        <div>
                            <input id="submitBtn" type="submit" value="Save" class="btn btn-primary" />
                            <button tpye="button" class="btn btn-primary" onclick="location.href='@Url.Action("Settings","Pastebook")'">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts{
    <script>
        $("#submitBtn").click(function () {
            CheckPasswords();
        });

        $("#password").blur(function () {
            if ($("#password").val() == "") {
                $("#passwordError").text("Password is required");
            } else {
                $("#passwordError").text("");
            }
        });

        $("#confirmPassword").blur(function () {
            if ($("#confirmPassword").val() == "") {
                $("#confirmError").text("Confirm password is required");
            } else {
                $("#confirmError").text("");
            }
        });

        function CheckPasswords() {
            if ($("#password").val() != "" && $("#confirmPassword").val() != "") {
                if ($("#password").val() != $("#confirmPassword").val()) {
                    $("#passwordError").text("Password and confirm password do not match");
                    $("#confirmError").text("Password and confirm password do not match");
                } else {
                    $("#passwordError").text("");
                    $("#confirmError").text("");
                }
            } else {
                if ($("#password").val() == "") {
                    $("#passwordError").text("Password is required");
                } else {
                    $("#passwordError").text("");
                }
                if ($("#confirmPassword").val() == "") {
                    $("#confirmError").text("Confirm password is required");
                } else {
                    $("#confirmError").text("");
                }
            }
            
            
            if ($("#oldPassword").val() == "") {
                $("#oldError").text("Old password is required");
            }
        };
    </script>
    }


