@model IEnumerable<PastebookDataLibrary.USER    >

@{ 
    Layout= "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1 divPaddingTop"> 
        <h1 id="searchUserHeader">Search User</h1> 
            <div class="row">
                @if (Model.Count() == 0)
                {
                    <div class="col-md-12">
                        <span class="nothingToShow">No result found</span>
                    </div>
                }
                @foreach (var user in Model)
                {
                <div class="col-md-3 divFriendInnerContent">
                    <div class="divUserContent divShadow divBorderRadius">
                        <div class="row">
                            <div class="col-md-12 divFriendInnerContent ">  
                                        @{
                                            if (user.PROFILE_PIC == null)
                                            {
                                                <img id="imgFriendList" src="~/Content/Images/defaultProfilePic.jpg" class="img-circle img-responsive" />
                                            }else
                                            {
                                                var base64 = Convert.ToBase64String(user.PROFILE_PIC);
                                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                <img id="imgFriendList" src="@imgSrc" class="img-circle img-responsive" />
                                            }


                                        }     
                                    <div  class="form-group">
                                        <h3 id="divNameFriendList" class="text-center">@user.FIRST_NAME @user.LAST_NAME</h3>
                                    </div>  
                                    <div class="form-group">
                                        <div class="col-md-6 col-md-offset-3">
                                            <button id="btnViewProfile" class="btn btn-primary" onclick="location.href='@Url.Action("ViewProfile","Pastebook",new {userName = user.USER_NAME })'">View Profile</button>
                                         </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>                       
    </div>
</div>