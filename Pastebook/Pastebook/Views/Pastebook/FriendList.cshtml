@model IEnumerable<PastebookDataLibrary.USER    >

@{ 
    Layout= "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 divFriendList">
        @foreach (var friend in Model)
        {

            <div class="row">
                <div class="col-md-4">
                    <div class="divFriendContent divShadow">
                        <div class="row">
                            <div class="col-md-12"> 
                                <div class="form-horizontal">
                                    <div class="form-control">
                                        @{
                                            if (friend.PROFILE_PIC == null)
                                            {
                                                <img id="imgHome" src="~/Content/Images/defaultProfilePic.jpg" class="img-circle img-responsive" />
                                            }else
                                            {
                                                var base64 = Convert.ToBase64String(friend.PROFILE_PIC);
                                                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                                <img id="imgHome" src="@imgSrc" class="img-circle img-responsive" />
                                            }
                                        }
                                              
                                    </div>
                                </div>
                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                                            }
    </div>
</div>