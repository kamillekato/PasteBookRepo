@model IEnumerable<PastebookDataLibrary.NOTIFICATION>

@foreach (var notif in Model)
{
    <li>
        

            @if (notif.NOTIF_TYPE == "C")
            {
                <a class="notificationContent" role="button" onclick="location.href='@Url.Action("ViewPost","Pastebook",new {postID = @notif.POST_ID })'" >
                    <div class="form-inline content-inner">
                        <span class="form-group"><img src="~/Content/Images/defaultProfilePic.jpg" class="img-circle img-responsive img-notification" /></span>
                        <div class="form-group">
                            <strong>@notif.USER1.FIRST_NAME @notif.USER1.LAST_NAME</strong><br />
                            <text>commented on your post</text>
                        </div>
                    </div>
                </a>
            }
            else if(notif.NOTIF_TYPE == "L")
            {
                <a class="notificationContent" role="button" onclick="location.href='@Url.Action("ViewPost","Pastebook",new {postID = @notif.POST_ID })'">
                    <div class="form-inline content-inner">
                        <span class="form-group"><img src="~/Content/Images/defaultProfilePic.jpg" class="img-circle img-responsive img-notification" /></span>
                        <div class="form-group">
                            <strong>@notif.USER1.FIRST_NAME @notif.USER1.LAST_NAME</strong><br />
                            <text>liked on your post</text>
                        </div>
                    </div>
                </a>
            }
        
    </li>

}
