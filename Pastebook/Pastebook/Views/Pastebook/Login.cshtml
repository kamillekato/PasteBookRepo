@model Pastebook.Models.LoginModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@using (Html.BeginForm("Login","Pastebook",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    <div class="col-md-offset-7 col-md-5">
       
            <div class="containerView divShadow" >   
                <div class="row rowLoginContainer">
                    <h2 class="col-md-offset-1 col-md-11 grayText">Welcome To Pastebook</h2> 
                </div>
                    <p class="blueText"><strong>ACCOUNT LOGIN</strong></p>
                <div class="form-horizontal row rowLoginContainer">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group"> 
                        <div class="col-md-12 "> 
                            @Html.LabelFor(model => model.EmailAddress, htmlAttributes: new { @class = "control-label grayText"   }) 
                            @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control wide" ,@placeholder="Email Address" } }) 
                        </div>
                    </div>

                    <div class="form-group"> 
                        <div class="col-md-12">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label grayText" })
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control wide", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btnMain btn-default btn-block btn-primary wide"><strong> LOGIN</strong></button>
                        </div>
                    </div>
                    
                     
                    
                </div>
            </div> 
         <div class="containerView divShadow"> 
             <div class="row rowLoginContainer">
                 <h5 class="grayText"><strong>No Account?</strong></h5>   
                 <button type="button" class="btn btn-default btn-primary wide btn-block btnMain" onclick="location.href='@Url.Action("SignUp","Pastebook")'"><strong>SIGN UP</strong></button>
             </div>
         </div>
    </div>
    
    
}
 
