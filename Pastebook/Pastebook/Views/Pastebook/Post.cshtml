
@model Pastebook.Models.PostViewModel
@{ 
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
} 


@using (Html.BeginForm("Post", "Pastebook", FormMethod.Post))
{
    <div class="row rowPost" >  
            <div class="divShadow divPost clearfix">
                <h5 class="blueText"><strong><span class="glyphicon glyphicon-pencil"></span>  Create Post</strong></h5>
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = "3" }) 
                <div class="row">  
                    <div class="col-md-offset-10 col-md-2">
                        <button type="submit" class="asText"><h4 class="blueText"><strong>POST</strong></h4></button> 
                    </div>   
                </div>
            </div>
    </div>
}
